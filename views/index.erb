<body>
    <div style="position: fixed; top: 10px; right: 15px;"><a href="mailto:leo@lpm.io">Feedback/Support</a></div>
    <div class="container">
        <% if logged_in? %>
            <%= erb :account %>
        <% else %>
            <%= erb :login %>
        <% end %>
        <script type="text/javascript" src="js/jquery-2.0.3.js"></script>
        <script type="text/javascript" src="js/app.js"></script>
<% if logged_in? %>
<% user = User[id: current_user] %>
<script type="text/javascript">
$(document).ready(function(){
    var prevMessage = null;
    <% if user.recent_message %>
    renderCode("<%= user.recent_message %>", "<%= user.recent_message_time %>");
    prevMessage = "<%= user.recent_message %>";
    <% end %>

    poll(prevMessage, '<%= current_user %>');
});
</script>
<% end %>
    </div>
</body>
</html>
